\newcommand{\substitution}[2]{ %Sijoitus integraalissa \substitution{}{}
    \bigg\slash_{\!\!\!\!\!#1}^{#2}
}

\newcommand\osubset{ %Avoin osajoukko \osubset
    \mathrel{
        \ooalign{
            $\subset$
            \cr
            \hidewidth
            \raise.0ex
            \hbox{$\circ\mkern.9mu$}
            \cr
        }
    }
}

\newcommand{\upRiemannint}[2]{ %Yläintegraali
    \overline{\int_{#1}^{#2}}
}
\newcommand{\loRiemannint}[2]{ %Alaintegraali 
    \underline{\int_{#1}^{#2}}
}
\newcommand{\Riemannint}[2]{ %Integraali
    \int_{#1}^{#2}
}
\newcommand{\Pathint}[1]{ %Polkuintegraali
    \oint_{#1}
}

